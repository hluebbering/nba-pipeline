{
  "name": "NBA Engine",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "runArgs": [
    "-e", "GOOGLE_APPLICATION_CREDENTIALS=/workspaces/.gcp/key.json"
  ],

  // Micromamba shell + env  ✅
  "postCreateCommand": "micromamba shell init -s bash -y && micromamba create -f env.yml -n nba-engine && echo 'micromamba activate nba-engine' >> ~/.bashrc",

  // write your service-account key each start  ✅
  "postStartCommand": "mkdir -p /workspaces/.gcp && echo \"$GCP_KEY_JSON\" > /workspaces/.gcp/key.json",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "charliermarsh.ruff"
      ]
    }
  }
}
