{
  "name": "NBA Engine",

  "features": {
    "ghcr.io/devcontainers/features/miniconda:1": {
      "version": "latest",
      "activate_environment": "nba-engine",
      "environment_file": "env.yml"
    }
  },

  "runArgs": [
    "-e", "GOOGLE_APPLICATION_CREDENTIALS=/workspaces/.gcp/key.json"
  ],

  // â‘  Write the GCP key on each start
  "postStartCommand": "mkdir -p /workspaces/.gcp && echo \"$GCP_KEY_JSON\" > /workspaces/.gcp/key.json",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "charliermarsh.ruff"
      ]
    }
  }
}
